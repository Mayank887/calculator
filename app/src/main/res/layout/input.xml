<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:id="@+id/a1"
                android:layout_marginRight="20dp"
                android:text="C"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/a2"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"

                android:text="%"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a3"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="Back"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a4"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="/"
                android:textSize="30sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a5"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="7"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a6"

                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="8"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a7"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="9"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/a8"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="X"
                android:textSize="30sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a9"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="4"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a10"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="5"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/a11"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="6"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a12"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="-"
                android:textSize="30sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="1"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/a14"

                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="2"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a15"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="3"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/a16"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="+"
                android:textSize="30sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:id="@+id/a17"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="00"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:id="@+id/a18"

                android:text="0"
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:id="@+id/a19"
                android:text="."
                android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="="
                android:id="@+id/a20"
                android:textSize="30sp"></TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>